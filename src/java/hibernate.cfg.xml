<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.DerbyDialect</property>
    <property name="hibernate.connection.driver_class">org.apache.derby.jdbc.ClientDriver</property>
    <property name="hibernate.connection.url">jdbc:derby://localhost:1527/GMDBProject</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    
    <mapping class="com.uoc.ead.entity.Movie"/>
    <mapping class="com.uoc.ead.entity.Directors"/>
    <mapping class="com.uoc.ead.entity.Actors"/>
    <mapping class="com.uoc.ead.entity.UserDetails"/>
    <mapping class="com.uoc.ead.entity.Admin"/>
    <mapping class="com.uoc.ead.entity.Genres"/>
    <mapping class="com.uoc.ead.entity.Purchas"/>
    <mapping class="com.uoc.ead.entity.UserRate"/>
    <mapping class="com.uoc.ead.entity.Rate"/>
    
  </session-factory>
</hibernate-configuration>
